<div class="backbone-temp col-xs-8 col-xs-offset-2">
  <div class="row">
    <h1>Album title: <%= album.escape('title') %></h1>
  </div>

  <div class="row">
    <ul class="list-unstyled">
      <% images.each( function (image) { %>
        <a href="#/images/<%= image.escape('id') %>">
          <img src="<%= image.escape('image_url') %>" class="album-img">
        </a>
      <% }); %>
    </ul>
  </div>

  <div class="row">
    <h2>Comments</h2>
    <ul class="list-unstyled">
      <% comments.each( function (comment) { %>
        <li> <%= comment.escape('username') %> said: <%= comment.escape('content') %>
      <% }) %>
  </div>
</div>
