<div class="album-profile" id="profile-show">
  <div class="row cover-image" id="cover-image"
    style="background-image: url(<%= user.escape('cover_photo_url') %>)">
    <div class="row"></div>
    <img src="<%= user.escape('avatar_url') %>" id="user-profile-img">
    <div class="person">
      <h1><span class="title-holder"><%= album.escape('title') %></span></h1>
      <span class="username-holder">
        <a href="#/users/<%= user.escape('username') %>">
          <%= user.escape('username') %>
        </a>
      </span>
    </div>
    <div class="stats">
      <div class="stat statcount">
        <h1><%= album.imageCount %></h1>
        <h2>Photos</h2>
      </div>
      <div class="stat view-count">
        <h1>0</h1>
        <h2>Views</h2>
      </div>
    </div>
    <div class="navbar profile-nav" id="profile-navbar">
      <ul class="clearfix nav navbar-nav" id="nav-ul-links">
        <li class="users-albums-btn">
          <a href="#/users/<%= user.escape('id') %>/albums">
            View All Albums
            </a>
        </li>
        <li class="active"><a>Photos</a></li>
      </ul>
    </div>
  </div>

  <div class="container-fluid photostream">
  </div>




</div>
