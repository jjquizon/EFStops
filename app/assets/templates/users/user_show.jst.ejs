<div class="profile col-xs-8 col-xs-offset-2">
  <div class="row">
    <h1><%= user.escape('username') %>'s profile</h1>
  </div>

  <div class="row">
    <img src="<%= user.escape('filepicker_url') %>" class="user-profile-img"><br>
    <% if (user.id == currentUserId) { %>
      <button class="change-avatar btn btn-default">Change avatar Image</button>
    <% } %>
  </div>

  <div class="row">
    <h3>Albums</h3>
  </div>

  <div class="row">
    <ul class="list-unstyled">
    <% albums.each( function (album) { %>
      <li>
        <a href="#/albums/<%= album.escape('id') %>">
          <%= album.escape('title') %>
        </a>
      </li>
    <% }); %>
    </ul>
  </div>

  <div class="row">
    <h3>Uploaded pictures</h3>
  </div>

  <div class="row">
    <% images.forEach( function (image) { %>
      <a href="#/images/<%= image.escape('id') %>">
        <img src="<%= image.escape('image_url') %>" class="album-img">
      </a>
    <% }); %>
  </div>
</div>
