<div class="container backbone-temp col-xs-4 col-xs-offset-4">
  <div class="row">
    <h1>Upload a Picture</h1>
  </div>
  <div class="row">
    <form class="form upload-form">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control upload-title" name="img[title]" value="" placeholder="Untitled">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="img[description]"></textarea>
      </div>

      <div class="form-group">
        <label for="tag">Image Tag</label>
        <input list="tags" class="form-control upload-tag" name="img[tag]" value="">
        <datalist id="tags">
          <option value="Other">
          <option value="Architecture">
          <option value="Animals">
          <option value="Art">
          <option value="Automobiles">
          <option value="Celebrity">
          <option value="Design">
          <option value="Fashion">
          <option value="Film">
          <option value="Food">
          <option value="Funny">
          <option value="Illustrations">
          <option value="Interior Design">
          <option value="Music">
          <option value="Nature">
          <option value="Photography">
          <option value="Religion">
          <option value="Romance">
          <option value="Sports">
          <option value="Toys">
          <option value="Travel">
          <option value="Typography">
          <option value="Urban">
          <option value="Weddings">
        </datalist>
      </div>

      <div>
        <label for="album">Choose an Album:</label>
        <input list="albums" class="form-control" name="img[album_id]" value="">
        <datalist id="albums">
          <option value="None">None</option>
          <% user.albums().forEach( function (album) { %>
            <option value="<%= album.escape('id') %>">
              <%= album.escape('title') %>
            </option>
          <% }); %>
        </datalist>
      </div>

      <div>
        <br>
        <button class="filepicker-button">Upload</button>
      </div>
    </form>
  </div>


</div>
