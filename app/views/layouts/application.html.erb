<!DOCTYPE html>
<html>
<head>
  <title>EfStops</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/header" %>
  <main class="container">
    <% if flash[:errors] %>
    <div>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    </div>
    <% end %>


    <%= yield %>
  </main>

</body>
</html>
